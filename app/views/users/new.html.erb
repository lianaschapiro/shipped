<h1>Sign Up</h1>

<% if @user.errors.full_messages.any? %>
	<ul>
		<% @user.errors.full_messages.each do |e| %>
			<li> <%= e %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |f| %>
	<h3><%=f.label :first_name %></h3>
	<%=f.text_field :fname %>
	<br><br>
	<h3><%=f.label :last_name %></h3>
	<%=f.text_field :lname %>
	<br><br>
	<h3><%=f.label :email %></h3>
	<%=f.email_field :email %>
	<br><br>
	<h3><%=f.label :username %></h3>
	<%=f.text_field :username %>
	<br><br>
	<h3><%=f.label :password %></h3>
	<%=f.password_field :password %>
	<br><br><br>
	<%=f.submit %>
<% end %>